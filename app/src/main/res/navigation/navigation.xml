<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nav_search">

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.cocktailtemplate.ui.search.SearchFragment"
        android:label="@string/recherche_tab"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_nav_search_to_nav_detail"
            app:destination="@id/nav_detail"
            >
        </action>
    </fragment>

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.cocktailtemplate.ui.cocktail_list.CocktailList"
        android:label="@string/categories_tab"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/nav_ingredients"
        android:name="com.example.cocktailtemplate.ui.ingredients.IngredientsFragment"
        android:label="@string/ingredients_tab"
        tools:layout="@layout/fragment_ingredients" />

    <fragment
        android:id="@+id/nav_detail"
        android:name="com.example.cocktailtemplate.ui.cocktaildetails.CocktailDetail"
        tools:layout="@layout/fragment_cocktail_detail" >
        <argument
            android:name="cocktailId"
            app:argType="integer"
            />
    </fragment>

</navigation>